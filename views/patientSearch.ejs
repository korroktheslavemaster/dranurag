<!-- views/home.ejs -->

<!DOCTYPE html>
<html>

<head>
 <%- include('partials/head')%>
</head>

<body>
  <div class="container">
    <%- include('partials/navbar') %>
    <%- include('partials/header')%>
    <form action="/patientSearch" method="post">
      <div class="form-group row">
        <label for="patientId" class="col-md-2 col-form-label">Patient ID</label>
        <div class="col-md-10">
          <input type="number" name="patientId" id="patientId" class="form-control">
        </div>
      </div>
      <div class="row">
        <small class="col-1 offset-5 pb-md-3 text-muted">or</small>
      </div>
      <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">Name</label>
        <div class="col-md-10">
          <input type="search" name="name" id="name" class="form-control">
          <small class="form-text text-muted">Not case sensitive</small>
        </div>
      </div>
      <div class="row">
        <small class="col-1 offset-5 pb-md-3 text-muted">or</small>
      </div>
      <div class="form-group row">
        <label for="dateOfBirth" class="col-md-2 col-form-label">Date of Birth</label>
        <div class="col-md-10">
          <input type="date" name="dateOfBirth" type="dateOfBirth" class="form-control">
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-md-2 col-md-10">
          <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
      </div>
    </form>
    <hr class="my-4">
    <% if (patients != undefined) { %>
    <ul class="list-group">
      <% patients.forEach((e) => {%>
        <li class="list-group-item flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
          <div>
            <h5 class="mb-1"><%=e.name%></h5>
            <p class="mb-1">ID: <%=e._id%></p>
            <small><%=e.helpText%></small>
          </div>
          <div>
              <div class="pb-2">
              <a class="btn btn-outline-primary col" href="/addVisit?patientId=<%=e._id%>">Add Visit</a>
              </div>
              <div clas="pt-2">
              <a class="btn btn-outline-primary col" href="#">View Profile</a>
              </div>
          </div>
        </div>
        
        </li>
      <%})%>
    <%}%>
    </ul>
    <%- include('partials/footer') %>
  </div>
</body>

</html>